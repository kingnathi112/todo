		{
			"name": "Create Todo",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ensure the Code Status is 201 [Created]\", function(){\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.test(\"Ensure Todo item has been created\", function(){\r",
							"    var location = pm.response.headers.get(\"Location\");\r",
							"    var stringId = location.substring(location.lastIndexOf(\"/\") + 1);\r",
							"    var Id = parseInt(stringId);\r",
							"    pm.expect(Id >= 1);\r",
							"});\r",
							"//Set todo-id\r",
							"if(pm.response.code === 201){\r",
							"    //To get a new created ID\r",
							"    var responseLocation = pm.response.headers.get(\"Location\");\r",
							"    var toId = responseLocation[responseLocation.length - 1];\r",
							"    pm.environment.set(\"todo-id\", toId);\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
